@inherits LayoutComponentBase


<Layout>
    <LayoutHeader>
        <Bar Breakpoint="Breakpoint.Desktop"
             Background="Background.Light"
             ThemeContrast="ThemeContrast.Light">
            <BarBrand>
                Dep. San Martin
            </BarBrand>
            <BarToggler />
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="#home">Portada</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="#docs">Equipo</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="#docs">Estadisticas</BarLink>
                    </BarItem>
                </BarStart>
